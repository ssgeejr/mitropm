# This is a best-guess set of file-format settings for mitro's sourcecode. When
# in doubt, try to match the style and indentation of the surrounding code.

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
