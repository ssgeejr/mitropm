<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Theme.Mitro" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_mitro</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mitro</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mitro</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mitro</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mitro</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mitro</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mitro</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mitro</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mitro</item>
    </style>

    <style name="ActionBar.Solid.Mitro" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_mitro</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mitro</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mitro</item>
        <item name="progressBarStyle">@style/ProgressBar.Mitro</item>
    </style>

    <style name="ActionBar.Transparent.Mitro" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_mitro</item>
        <item name="progressBarStyle">@style/ProgressBar.Mitro</item>
    </style>
	
    <style name="PopupMenu.Mitro" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mitro</item>	
    </style>
	
    <style name="DropDownListView.Mitro" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mitro</item>
    </style>

    <style name="ActionBarTabStyle.Mitro" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mitro</item>
    </style>
	
    <style name="DropDownNav.Mitro" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mitro</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mitro</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mitro</item>
    </style>
    
    <style name="ProgressBar.Mitro" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mitro</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mitro" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mitro</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mitro.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mitro</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mitro</item>
    </style>

</resources>
